# interpreter for shell commands
set shell powershell
set hidden false
set hidden!

cmd open &start $Env:f

map m $micro $Env:f

map n $nvim $Env:f

map c #reiniciamos n
map cf $New-Item -Path 'new-file.txt' -ItemType File
map cd $mkdir new-directory

# change the shell used in default shell keybinding
map w $powershell

map D :delete

map F $fzf | ForEach-Object { lf $(Split-Path $_ -Parent) }

# NAVEGACIÃ“N
map gd cd "~\Downloads"
map ge cd "~\Desktop"
map gA cd "~\AppData"

# COPIAR Y PEGAR
map C copy
map V paste

map E $start .
